        "guzzlehttp/guzzle": "~6.0",
        "twig/twig": "~1.0",
        "psr/simple-cache": "^1.0",
        "league/html-to-markdown": "^4.4"
    },
    "require-dev": {
        "phpspec/phpspec": "^3.2",
        "friendsofphp/php-cs-fixer": "^2.0"
    },
    "bin": [
        "bin/uspec",
        "bin/uspec.pubkey"
