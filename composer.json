{
    "name": "mikekamornikov/uspec",
    "type": "application",
    "description": "SugarCRM upgrade spec generator",
    "license": "MIT",
    "authors": [
        {
            "name": "Mike Kamornikov",
            "email": "mkekamornikov@sugarcrm.com"
        },
